<header class="be-flex">
  <img class="gamepad">
  <h1 class="be-light-blue white low-margin large-padding">GameApp</h1>
</header>
<div class="big be-dark-blue">
  <div class="center-xs margin-top be-light-blue">
    <h2 class="low-margin white">Iniciar Sesíon</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email,"correo",class:"white" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password,"contraseña" ,class:"white"%><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me,"recuerdame",class:"white" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Entra",class:"btn be-lightest-blue white" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>