<header class="be-flex">
  <img class="gamepad">
  <h1 class="be-light-blue white low-margin large-padding">GameApp</h1>
</header>
<div class="big be-dark-blue">
  <div class="center-xs margin-top be-light-blue">
    <h2 class="white">Registro</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email,"correo electronico",class:"white" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "contraseña",class:"white" %>
        <% if @minimum_password_length %>
        <em class="white">(minimo <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "confirmar contraseña",class:"white" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password"%>
      </div>

      <div class="actions">
        <%= f.submit "Registrate",class:"btn be-lightest-blue white"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>